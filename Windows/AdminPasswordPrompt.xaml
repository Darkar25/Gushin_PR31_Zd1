<Window x:Class="Salon.Windows.AdminPasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon.Windows" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="Активация режима администратора" Height="157.204" Width="481.659">
    <DockPanel Margin="8">
        <syncfusion:SfTextInputLayout DockPanel.Dock="Top" Hint="Пароль" HelperText="Введите пароль для доступа к функционалу администратора.">
            <PasswordBox Name="pass"/>
        </syncfusion:SfTextInputLayout>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_ОК" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" />
            <Button Content="_Отмена" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" />
        </StackPanel>
    </DockPanel>
</Window>
